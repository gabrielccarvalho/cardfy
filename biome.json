{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noInteractiveElementToNoninteractiveRole": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "formatter": {
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "bracketSpacing": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  }
}